# from https://wiki.debian-fr.xyz/Monit#postfix

check process postfix with pidfile /var/spool/postfix/pid/master.pid
  group mail
  start program = "/usr/bin/systemctl start postfix"
  stop  program = "/usr/bin/systemctl stop postfix"
  if 5 restarts within 5 cycles then timeout

# check smtp port 25 is disabled because the port is used by an other mailserver process
